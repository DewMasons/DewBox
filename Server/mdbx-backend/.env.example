# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
# For local MySQL:
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=root
# DB_PASSWORD=your_password
# DB_NAME=mdbx_database

# For Railway MySQL (get these from Railway dashboard > Variables tab):
DB_HOST=your-railway-host.railway.app
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_railway_password_here
DB_NAME=railway

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Paystack Configuration (Required for bank operations)
# Get your LIVE keys from https://dashboard.paystack.com/#/settings/developer
# IMPORTANT: Use LIVE keys (sk_live_...) for production
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key_here

# Twilio Configuration (Optional - for SMS features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Railway Connection String (Alternative - if you want to use MYSQL_URL)
# MYSQL_URL=mysql://root:password@host:3306/railway
